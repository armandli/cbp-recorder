[Unit]
Description=cbp-trade-0-writer
After=network.target

[Service]
WorkingDirectory=/home/armandli/cbp-recorder
ExecStart=/bin/bash -c 'cd /home/armandli/cbp-recorder/ && source ./env/bin/activate && trade_writer --period 360 --exchange trade_exchange_0 --logfile writer.log'
