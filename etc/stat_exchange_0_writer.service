[Unit]
Description=cbp-stat-0-writer
After=network.target

[Service]
WorkingDirectory=/home/armandli/cbp-recorder
ExecStart=/bin/bash -c 'cd /home/armandli/cbp-recorder/ && source ./env/bin/activate && stat_writer --period 360 --exchange stat_exchange_0 --logfile publisher.log'
Restart=on-failure

[Install]
WantedBy=multi-user.target
